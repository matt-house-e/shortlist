# =============================================================================
# Agent Template - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values
# Never commit .env to version control!
# =============================================================================

# -----------------------------------------------------------------------------
# LLM Configuration
# -----------------------------------------------------------------------------
# OpenAI API key (required for OpenAI models)
OPENAI_API_KEY=sk-your-openai-api-key

# Anthropic API key (optional, for Claude models)
# ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key

# LLM settings
LLM_PROVIDER=openai  # openai, anthropic, or mock
LLM_MODEL=gpt-4o-mini
LLM_TEMPERATURE=0.7

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
# PostgreSQL connection string
# Local development:
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/agent_template

# Production (example):
# DATABASE_URL=postgresql+asyncpg://user:password@your-rds-endpoint:5432/dbname

# -----------------------------------------------------------------------------
# S3 Storage Configuration
# -----------------------------------------------------------------------------
# Bucket name for file uploads
S3_BUCKET=uploads

# Local development with LocalStack:
S3_ENDPOINT_URL=http://localhost:4566
AWS_ACCESS_KEY_ID=test
AWS_SECRET_ACCESS_KEY=test

# Production (comment out S3_ENDPOINT_URL and use IAM roles):
# AWS_REGION=us-east-1
# S3_ENDPOINT_URL=  # Leave empty for real S3

# -----------------------------------------------------------------------------
# Authentication Configuration
# -----------------------------------------------------------------------------
# Auth method: password or oauth
AUTH_METHOD=password

# Password authentication (for development/testing)
AUTH_PASSWORD=changeme

# OAuth configuration (for production)
# OAUTH_PROVIDER=azure  # azure, google, etc.
# OAUTH_CLIENT_ID=your-client-id
# OAUTH_CLIENT_SECRET=your-client-secret
# OAUTH_TENANT_ID=your-tenant-id  # Azure AD only

# -----------------------------------------------------------------------------
# Chainlit Configuration
# -----------------------------------------------------------------------------
# Required: Secret for session encryption (generate with: openssl rand -hex 32)
CHAINLIT_AUTH_SECRET=your-secret-key-change-this-in-production

# Server settings
CHAINLIT_HOST=0.0.0.0
CHAINLIT_PORT=8000

# -----------------------------------------------------------------------------
# Knowledge Base Configuration (Optional)
# -----------------------------------------------------------------------------
# OpenAI Vector Store ID for knowledge base search
# OPENAI_VECTOR_STORE_ID=vs_your-vector-store-id

# Knowledge base settings
# KB_SEARCH_THRESHOLD=0.7
# KB_MAX_RESULTS=5

# -----------------------------------------------------------------------------
# Web Search Configuration (OpenAI Responses API)
# -----------------------------------------------------------------------------
# Enable web search (requires OpenAI provider)
WEB_SEARCH_ENABLED=false

# Limit search to specific domains (comma-separated, up to 100)
# WEB_SEARCH_ALLOWED_DOMAINS=docs.example.com,support.example.com

# User location for geographic context (optional)
# WEB_SEARCH_USER_COUNTRY=US
# WEB_SEARCH_USER_CITY=San Francisco
# WEB_SEARCH_USER_REGION=California

# -----------------------------------------------------------------------------
# External Integrations (Optional)
# -----------------------------------------------------------------------------
# Example: Jira Service Management
# JSM_ENABLED=false
# JSM_BASE_URL=https://your-domain.atlassian.net
# JSM_EMAIL=your-email@example.com
# JSM_API_TOKEN=your-api-token
# JSM_PROJECT_KEY=YOUR-PROJECT

# -----------------------------------------------------------------------------
# Logging Configuration
# -----------------------------------------------------------------------------
LOG_LEVEL=INFO

# -----------------------------------------------------------------------------
# Development Settings
# -----------------------------------------------------------------------------
# Set to true for additional debug output
DEBUG=false
